<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Creating teams, results, statistics</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

        
    </head>
    <body>
        <div class="container-fluid text-center">
            
            <table style="border: 1px solid black;">
            <tr><td>Division A</td></tr>
            {% for division in divisionA %}
                <tr style="border: 1px solid black;">
                    {% for item in division %}
                        <td style="border: 1px solid black;">{{ item }}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
            </table>
            <hr>
            <table style="border: 1px solid black;">
            <tr><td>Division B</td></tr>
            {% for division in divisionB %}
                <tr style="border: 1px solid black;">
                    {% for item in division %}
                        <td style="border: 1px solid black;">{{ item }}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
            </table>

            <hr>

            <table>
                <tr>
                    <td></td>
                    <td>Semi-final</td>
                    <td>Final</td>
                    <td>Stats</td>
                </tr>
                <tr>
                    <td>
                        {% for game in playOffQuater %}
                            <table><tr>
                            <td>
                                {{ game['first_team'] }}({{ game['first_team_division'] }})<br>
                                {{ game['second_team'] }}({{ game['second_team_division'] }})
                            </td>
                            <td>
                                {{ game['score'] }}
                                
                            </td>
                            </tr></table>
                            <hr>
                            
                        {% endfor %}
                    </td>
                    <td>
                        {% for game in playOffSemi %}
                            <table><tr>
                            <td>
                                {{ game['first_team'] }}({{ game['first_team_division'] }})<br>
                                {{ game['second_team'] }}({{ game['second_team_division'] }})
                            </td>
                            <td>
                                {{ game['score'] }}
                                
                            </td>
                            </tr></table>
                            <hr>
                            
                        {% endfor %}
                    </td>
                    <td>
                        {% for game in playOffFinal %}
                            <table><tr>
                            <td>
                                {{ game['first_team'] }}({{ game['first_team_division'] }})<br>
                                {{ game['second_team'] }}({{ game['second_team_division'] }})
                            </td>
                            <td>
                                {{ game['score'] }}
                                
                            </td>
                            </tr></table>
                            <hr>
                            
                        {% endfor %}
                    </td>

                    <td>
                        {% for team in leaderTable %}
                            
                            {{ team['position'] }}. {{ team['name'] }} - {{ team['point'] }}
                                
                            <br>
                            
                            
                        {% endfor %}
                    </td>
                </tr>
            </table>
            
            
            

        </div>
    </body>
</html>
